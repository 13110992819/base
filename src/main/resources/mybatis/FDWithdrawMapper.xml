<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xnjr.moom.dao.IFDWithdrawDAO">
	<resultMap id="fdWithdraw_DB_Result" type="fdWithdraw">
		<result column="qx_no" property="qxNo" />
		<result column="status" property="status" />
		<result column="amount" property="amount" />
		<result column="towho" property="towho" />
		<result column="create_datetime" property="createDatetime" />	
		
		<result column="approve_user" property="approveUser" />
		<result column="approve_datetime" property="approveDatetime" />		
		<result column="pay_user" property="payUser" />	
		<result column="pay_datetime" property="payDatetime" />	
		
		<result column="pay_no" property="payNo" />
		<result column="pay_fee" property="payFee" />	
		<result column="work_date" property="workDate" />				
		<result column="check_user" property="checkUser" />		
		<result column="check_datetime" property="checkDatetime" />	
				
		<result column="remark" property="remark" />	
		<result column="account_number" property="accountNumber" />	
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">			
			<if test="qxNo != null and qxNo != '' ">
				AND t.qx_no = #{qxNo}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>	
			<if test="amount != null and amount != '' ">
				AND t.amount = #{amount}
			</if>	
			<if test="towho != null and towho != '' ">
				AND t.towho = #{towho}
			</if>	
			<if test="approveUser != null and approveUser != '' ">
				AND t.approve_user = #{approveUser}
			</if>
			<if test="payUser != null and payUser != '' ">
				AND t.pay_user = #{payUser}
			</if>
			<if test="checkUser != null and checkUser != '' ">
				AND t.check_user = #{checkUser}
			</if>
			<if test="workDate != null and workDate != '' ">
				AND t.work_date = #{workDate}
			</if>
			<if test="accountNumber != null and accountNumber != '' ">
				AND t.account_number = #{accountNumber}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>			
		</trim>
	</sql>
	<select id="select_fdWithdraw" parameterType="fdWithdraw" resultMap="fdWithdraw_DB_Result">
		SELECT 
		t.qx_no
		,t.status
		,t.amount
		,t.towho
		,t.create_datetime

		,t.approve_user	
		,t.approve_datetime
		,t.pay_user
		,t.pay_datetime
		,t.pay_no
		
		,t.pay_fee
		,t.work_date
		,t.check_user			
		,t.check_datetime
		,t.remark	
		
		,t.account_number	
		FROM
		tfd_withdraw t 
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_fdWithdraw_count" parameterType="fdWithdraw" resultType="java.lang.Long">
		SELECT count(1) FROM tfd_withdraw t 
		<include refid="where_condition"/>
	</select>

	<insert id="insert_fdWithdraw" parameterType="fdWithdraw">
		INSERT INTO tfd_withdraw(
		qx_no
		,status
		,amount
		,towho
		,create_datetime
		
		
		,remark		
		,account_number	
		)
		VALUES(
		#{qxNo}
		,#{status}
		,#{amount}
		,#{towho}
		,#{createDatetime}
		
		,#{remark}
		,#{accountNumber}
		)
	</insert>

	<update id="update_approve_order" parameterType="fdWithdraw">
		UPDATE tfd_withdraw
		SET
		status= #{status}
		,approve_user= #{approveUser}
		,approve_datetime= #{approveDatetime}		
		,remark= #{remark}
		WHERE
		qx_no = #{qxNo}			
	</update>
	
	<update id="update_pay_order" parameterType="fdWithdraw">
		UPDATE tfd_withdraw
		SET
		status= #{status}
		,pay_user= #{payUser}
		,pay_datetime= #{payDatetime}
		,pay_no= #{payNo}		
		,pay_fee= #{payFee}
		
		,remark= #{remark}		
		,work_date= #{workDate}
		WHERE
		qx_no = #{qxNo}				
	</update>
	
	<update id="update_check_order" parameterType="fdWithdraw">
		UPDATE tfd_withdraw
		SET
		status= #{status}
		,check_user= #{checkUser}
		,check_datetime= #{checkDatetime}
		,remark= #{remark}
		WHERE
		qx_no = #{qxNo}				
	</update>
</mapper>
