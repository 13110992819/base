<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xnjr.moom.IgsTraderDAO">
	<resultMap id="gsTrader_DB_Result" type="gsTrader">
		<result column="user_id" property="userId" />
		<result column="mobile" property="mobile" />
		<result column="photo" property="photo" />
		<result column="introduction" property="introduction" />
		<result column="level" property="level" />
		
		<result column="total_volume" property="totalVolume" />
		<result column="total_count" property="totalCount" />
		<result column="total_profit" property="totalProfit" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		
		<result column="remark" property="remark" />
		
		<result column="real_name" property="realName" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="mobile != null and mobile != '' ">
				AND t.mobile = #{mobile}
			</if>
			<if test="level != null and level != '' ">
				AND t.level = #{level}
			</if>
			<if test="updater != null and updater != '' ">
				AND t.updater = #{updater}
			</if>
			<if test="realName != null and realName != '' ">
				AND su.real_name = #{realName}
			</if>
		</trim>
	</sql>
	<select id="select_gsTrader" parameterType="gsTrader" resultMap="gsTrader_DB_Result">
		SELECT
		t.user_id
		,t.mobile
		,t.photo
		,t.introduction
		,t.level
		
		,t.total_volume
		,t.total_count
		,t.total_profit
		,t.updater
		,t.update_datetime
		
		,t.remark
		,su.real_name
		FROM
		tgs_trader t left join tsys_user su ON t.user_id = su.user_id
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			${order}
		</trim>
	</select>

	<select id="select_gsTrader_count" parameterType="gsTrader" resultType="java.lang.Long">
		SELECT count(1) FROM tgs_trader t left join tsys_user su on t.user_id = su.user_id
		<include refid="where_condition" />
	</select>

	<insert id="insert_gsTrader" parameterType="gsTrader">
		INSERT INTO tgs_trader(
		user_id
		,mobile
		,photo
		,introduction
		,level
		
		,total_volume
		,total_count
		,total_profit
		,updater
		,update_datetime
		
		,remark
		)
		VALUES(
		#{userId}
		,#{mobile}
		,#{photo}
		,#{introduction}
		,#{level}
		
		,#{totalVolume}
		,#{totalCount}
		,#{totalProfit}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<delete id="delete_gsTrader" parameterType="gsTrader">
		DELETE FROM tgs_trader
		WHERE
		user_id = #{userId}
	</delete>
	
	<update id="update_gsTrader" parameterType="gsTrader">
		UPDATE tgs_trader SET
		mobile = #{mobile}
		,photo = #{photo}
		,introduction = #{introduction}
		,level = #{level}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE user_id = #{userId}
	</update>
	
	<update id="update_gsTraderMobile" parameterType="gsTrader">
		UPDATE tgs_trader SET
		mobile = #{mobile}
		WHERE user_id = #{userId}
	</update>
	
	<update id="update_total" parameterType="gsTrader">
		UPDATE tgs_trader SET
		total_volume = #{totalVolume}
		,total_count = #{totalCount}
		,total_profit = #{totalProfit}
		WHERE user_id = #{userId}
	</update>
	
</mapper>
