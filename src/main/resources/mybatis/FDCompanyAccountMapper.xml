<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xnjr.moom.dao.IFDCompanyAccountDAO">
	<resultMap id="fdCompanyAccount_DB_Result" type="fdCompanyAccount">
		<result column="company_code" property="companyCode" />
		<result column="company_name" property="companyName" />		
		<result column="account_number" property="accountNumber" />
		<result column="status" property="status" />
		<result column="amount" property="amount" />
		
		<result column="frozen_amount" property="frozenAmount" />
		<result column="currency" property="currency" />		
		<result column="create_datetime" property="createDatetime" />	
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">	
			<if test="companyCode != null and companyCode != '' ">
				AND t.company_code = #{companyCode}
			</if>	
			<if test="companyName != null and companyName != '' ">
				AND t.company_name = #{companyName}
			</if>	
			<if test="accountNumber != null and accountNumber != '' ">
				AND t.account_number = #{accountNumber}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
		</trim>
	</sql>
	
	<select id="select_fdCompanyAccount" parameterType="fdCompanyAccount" resultMap="fdCompanyAccount_DB_Result">
		SELECT 
		t.company_code
		,t.company_name
		,t.account_number
		,t.status
		,t.amount
		
		,t.frozen_amount
		,t.currency
		,t.create_datetime
		FROM
		tfd_company_account t 
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_fdCompanyAccount_count" parameterType="fdCompanyAccount" resultType="java.lang.Long">
		SELECT count(1) FROM tfd_company_account t 
		<include refid="where_condition"/>
	</select>

	<insert id="insert_fdCompanyAccount" parameterType="fdCompanyAccount">
		INSERT INTO tfd_company_account(
		company_code
		,company_name
		,account_number
		,status
		,amount
		
		,frozen_amount
		,currency
		,md5
		,create_datetime
		)
		VALUES(
		#{companyCode}
		,#{companyName}
		,#{accountNumber}
		,#{status}
		,#{amount}
		
		,#{frozenAmount}
		,#{currency}
		,#{md5}
		,#{createDatetime}
		)
	</insert>
	<update id="update_fdCompanyAccountAmount" parameterType="fdCompanyAccount">
		UPDATE tfd_company_account
		SET
		 amount= #{amount}
		,md5 = #{md5}
		,update_datetime = #{updateDatetime}
		WHERE
		account_number = #{accountNumber}			
	</update>
	<update id="update_fdCompanyAccountFrozenAmount" parameterType="fdCompanyAccount">
		UPDATE tfd_company_account
		SET
		 amount= #{amount}
		,frozen_amount = #{frozenAmount}
		,md5 = #{md5}
		,update_datetime = #{updateDatetime}
		WHERE
		account_number = #{accountNumber}			
	</update>
	<update id="update_fdCompanyAccountStatus" parameterType="fdCompanyAccount">
		UPDATE tfd_company_account
		SET
		 status= #{status}
		,update_datetime = #{updateDatetime}
		WHERE
		account_number = #{accountNumber}		
	</update>
</mapper>
